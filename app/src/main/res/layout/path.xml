<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ee3425"
    android:weightSum="1">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/path"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beautiful, Private Sharing"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/path1"
        android:layout_gravity="center"
        android:layout_marginTop="58dp"
        android:textColor="#cc2900" />
    <TextView
        android:id="@+id/Inggris"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have a Path Account?"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/SignUp"
        android:text="Sign Up"
        android:background="@drawable/path2"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/Inggris2"
        android:textSize="14dp"
        android:layout_width="188dp"
        android:layout_height="55dp"
        android:text="By using Path, you agree to Path's Terms of Use and Privacy Policy."
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#ffff"
        android:layout_gravity="center" />
</LinearLayout>
